@model KonusarakOgrenQuiz.Models.QuestionList

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Questions</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddQuestion" method="post">

            <div class="form-group" id="item-list">
                <a href="#" id="addQuestion">Add</a>
                <br />
                <label>Question</label>
                <input type="text" asp-for="questions[0]" id="items" class="items form-control" name="questions[0].Question" />
                <label>Answer 1</label>
                <input type="text" asp-for="questions[0]"  id="items"class="items form-control" name="questions[0].answer1" />
                <label>Answer 2</label>
                <input type="text" asp-for="questions[0]" id="items" class="items form-control" name="questions[0].answer2" />
                <label>Answer 3</label>
                <input type="text" asp-for="questions[0]" id="items" class="items form-control" name="questions[0].answer3" />
                <label>Answer 4</label>
                <input type="text" asp-for="questions[0]" id="items" class="items form-control" name="questions[0].answer4" />
                <label>Correct Answer</label>
                <input type="number" asp-for="questions[0]" id="items" class="items form-control" name="questions[0].trueAnswer" />
            </div>
            <div class="form-group">
                <select asp-for="quizId" class="form-control" asp-items="ViewBag.quizId" style="display:none"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(function () {
        $("#addQuestion").click(function (e) {
            e.preventDefault();
            var i = ($(".items").length) / 6;
            var n = '<br/>' + '<label>Question</label>' + '<input type="text" class="items form-control" name="questions[' + i + '].Question" />' + '<label>Answer 1</label>'+
                '<input type="text" class="items form-control" name="questions[' + i + '].answer1" />' + '<label>Answer 2</label>'+
            '<br/>' + '<input type="text" class="items form-control" name="questions[' + i + '].answer2"/>' + '<label>Answer 3</label>'+
            '<br/>' + '<input type="text" class="items form-control" name="questions[' + i + '].answer3"/>' + '<label>Answer 4</label>'+
            '<br/>' + '<input type="text" class="items form-control" name="questions[' + i + '].answer4"/>' + '<label>Correct Answer</label>'+
                '<br/>' +'<input type="number" class="items form-control" name="questions[' + i + '].trueAnswer"/>'+'<br/><br/>';

            $("#item-list").append(n);
        });

    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
